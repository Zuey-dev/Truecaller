language = "python3"
run = "python bot.py"
modules = ["python-3.8", "web", "nix"]

[env]
PYTHONPATH = "${PYTHONPATH}:${workspaceFolder}"

[nix]
channel = "stable-24_05"

[packager]
language = "python3"

[packager.features]
packageSearch = true
guessImports = true
enabledForHosting = false

[unitTest]
language = "python3"

[languages]
[languages.python3]
pattern = "**/*.py"
syntax = "python"

[languages.python3.languageServer]
start = "pylsp"

[deployment]
run = ["sh", "-c", "python bot.py"]